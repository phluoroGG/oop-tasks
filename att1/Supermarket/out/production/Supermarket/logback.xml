<configuration>

<appender name="logFileAppender" class="ch.qos.logback.core.FileAppender">
<file>log.log</file>
<append>false</append>
  <encoder>
    <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
  </encoder>
</appender>

<root level="INFO">
 <appender-ref ref="logFileAppender" />
</root>

</configuration>